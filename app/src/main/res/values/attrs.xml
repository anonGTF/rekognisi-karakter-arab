<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseRecyclerView">
        <attr name="layout_progress" format="reference" />
        <attr name="layout_empty" format="reference" />
        <attr name="layout_error" format="reference" />
        <attr name="layout_shimmer" format="reference" />
        <attr name="recyclerClipToPadding" format="boolean" />
        <attr name="recyclerPadding" format="dimension" />
        <attr name="recyclerPaddingLeft" format="dimension" />
        <attr name="recyclerPaddingTop" format="dimension" />
        <attr name="recyclerPaddingRight" format="dimension" />
        <attr name="recyclerPaddingBottom" format="dimension" />
        <attr name="scrollbars">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="0"/>
            <enum name="none" value="2"/>
        </attr>
        <attr name="scrollbarStyle">
            <enum name="insideOverlay" value="0x0" />
            <enum name="insideInset" value="0x01000000" />
            <enum name="outsideOverlay" value="0x02000000" />
            <enum name="outsideInset" value="0x03000000" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="lvlayout_shimmer" format="reference" />
    </declare-styleable>

    <!--edit text custom-->
    <declare-styleable name="BaseEditText">
        <attr name="label" format="string" />
        <attr name="hint" format="string" />
        <attr name="icon" format="reference" />
        <attr name="iconLeft" format="reference" />
        <attr name="colorIcon" format="color|reference" />
        <attr name="colorLabel" format="color|reference" />
        <attr name="oriColorIcon" format="boolean" />
        <attr name="singleLine" format="boolean" />
        <attr name="required" format="boolean" />
        <attr name="search" format="boolean" />
        <attr name="reset" format="boolean" />
        <attr name="android:inputType" format="reference" />
        <attr name="android:fontFamily" />
        <attr name="paddingStart" format="dimension" />
        <attr name="paddingEnd" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PinEditText">
        <attr name="pinSpace" format="dimension|reference"/>
        <attr name="pinHintRepeated" format="boolean" />
    </declare-styleable>
    <!--end edit text-->

    <!--progress bar-->
    <declare-styleable name="RoundCornerProgressBar">
        <attr name="rcpbStrokeWidth" format="dimension" />
        <attr name="rcpbStrokeColor" format="color" />
        <attr name="rcpbProgressColor" format="color" />
        <attr name="rcpbProgress" format="integer" />
    </declare-styleable>
    <!--progress bar-->

    <!--<declare-styleable name="TagView">
        <attr name="tagLayoutBackground" format="reference" />
        <attr name="tagLayoutColor" format="color" />
        <attr name="tagTextSize" format="dimension" />
        <attr name="tagTextColor" format="color" />
        <attr name="isDeletable" format="boolean" />
        <attr name="deletableTextColor" format="color" />
        <attr name="deletableTextSize" format="dimension" />
    </declare-styleable>-->

    <declare-styleable name="TagView">
        <attr name="lineMargin" format="dimension" />
        <attr name="tagMargin" format="dimension" />
        <attr name="textPaddingLeft" format="dimension" />
        <attr name="textPaddingRight" format="dimension" />
        <attr name="textPaddingTop" format="dimension" />
        <attr name="textPaddingBottom" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textColorActive" format="color" />
        <attr name="isDeletable" format="boolean" />
        <attr name="background" format="reference" />
        <attr name="backgroundActive" format="reference" />
    </declare-styleable>


    <!--visualizer speech recognizer-->
    <attr name="shader_color_1" format="color"/>
    <attr name="shader_color_2" format="color"/>
    <attr name="amplitude" format="float"/>
    <attr name="amplitude_speed" format="float"/>
    <attr name="max_alpha" format="integer"/>

    <declare-styleable name="AXWaveView">
        <attr name="shader_color_1"/>
        <attr name="shader_color_2"/>
        <attr name="amplitude"/>
        <attr name="amplitude_speed"/>
        <attr name="max_alpha"/>

        <attr name="shader_remove_color_1" format="color"/>
        <attr name="shader_remove_color_2" format="color"/>
        <attr name="remove_color" format="color"/>
        <attr name="remove_size" format="dimension"/>
        <attr name="remove_wave" format="boolean"/>
        <attr name="remove_angle" format="float"/>

        <attr name="pinned_progress" format="float"/>
        <attr name="speed_scale" format="float"/>
        <attr name="circle" format="boolean"/>
        <attr name="circle_radius" format="dimension"/>

        <attr name="first_min_radius" format="dimension"/>
        <attr name="first_max_radius" format="dimension"/>
        <attr name="second_min_radius" format="dimension"/>
        <attr name="second_max_radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AXLineWaveView">
        <attr name="shader_color_1"/>
        <attr name="shader_color_2"/>
        <attr name="line_color" format="color"/>
        <attr name="amplitude"/>
        <attr name="amplitude_speed"/>
        <attr name="max_alpha"/>

        <attr name="main_wave" format="boolean"/>
        <attr name="main_wave_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PolygonImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="round_radius" format="dimension"/>
        <attr name="sides" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MonthView">
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="rowHeight" format="dimension" />
    </declare-styleable>

    <!--rating bar-->
    <declare-styleable name="BaseRatingBar">
        <attr name="single" format="boolean" />
        <attr name="outlineIcon" format="boolean" />
    </declare-styleable>
    <!--rating bar-->

    <!--stripeprogressbar-->
    <declare-styleable name="StripeProgressBar">
        <attr name="progress_radius" format="dimension" />
        <attr name="progress_background" format="reference" />
        <attr name="progress_image" format="reference" />
        <attr name="progress_max" format="integer" />
    </declare-styleable>

    <!--auto scrollable recyclerview-->
    <declare-styleable name="AutoScrollableRecyclerView">
        <attr name="delay" format="integer" />
    </declare-styleable>
</resources>
